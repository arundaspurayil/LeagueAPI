mixin championinfo(user)
    .row
        .col.champion-col
          .row.my-row
            .col-lg-4.col-md-6.my-col
              img(src="http://ddragon.leagueoflegends.com/cdn/10.7.1/img/champion/"+user.championInfo.key+".png")
            .col-lg-8.col-md-6.my-col
              p() #{user.summonerName}
              h3() #{user.championInfo.name}
          
          each primarysecondary in user.championInfo.abilities
            each ability in primarysecondary
              .row.my-row
                .col-lg-4.col.md-4.my-col
                  h3() #{ability.name}
                  
                  img(src="https://www.mobafire.com/images/ability/"+user.championInfo.name.toLowerCase().replace(/[ ]/gi,'-')+"-"+ ability.name.replace(/[^0-9a-zA-z ]/gi, '').replace(/\s+/g, '-').toLowerCase()+".png")
                .col-lg-8.col.md-8.my-col
                  if(ability.cooldown)
                    p() Cooldown: [ #{ability.cooldown.modifiers[0].values.toString().replace(/[,]/gi, ' / ')} ]
                  else
                    p() No Cooldown

                  if(ability.cost)
                    p() Cost: [ #{ability.cost.modifiers[0].values.toString().replace(/[,]/gi, ' / ')} ]
                  else
                    p() No Cost
                  
                  if(ability.targetRange)
                    p() Range: #{ability.targetRange}

                  p() #{ability.blurb}